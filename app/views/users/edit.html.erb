<h1>My Profile</h1>
<%= form_for(@user) do |f| %>
	<%= render 'users/shared/user_error_messages' %>
    
	<%= f.label :email %><br /> 
	<%= f.text_field :email %><br />


	<%= f.label :first_name %><br />
	<%= f.text_field :first_name %><br />

	<%= f.label :last_name %><br />
	<%= f.text_field :last_name %><br />

   <%= f.label :phone %><br />
	<%= f.text_field :phone %><br />

   <%= f.label :city %><br />
	<%= f.text_field :city %><br />

   <%= f.label :province %><br />
   <%= f.collection_select :province_id, @provinces, :id, :name, :prompt => "Select Province / State" %>


   <%= f.label :postal_code %><br />
	<%= f.text_field :postal_code, :size => 7 %><br />

 
	<%= f.submit "Save" %><br /><br />
   <%= submit_tag "Cancel", { :name => "user[Cancel]" } %>
  
<% end %>
 