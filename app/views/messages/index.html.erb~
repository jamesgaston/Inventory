<!-- views messages index.html.erb 
 -- instance vars:  @items
 -- local vars:  messages, i, m
 -- partials: 1 
 -- helpers: 
 -- methods: Message.find_all_for_item(i)
 --          Item.describe_my_ownership     
 -->

<% content_for :title do %>
    Messages
<% end %>

<h1>Messages</h1>

<div class="list"> 

		<% if @items.nil? == false  %>
			<% for i in @items %>
		
					<% messages = Message.find_all_for_item(i) %>
		
					<% if (messages.nil? == false) && (messages.size > 0) %>
					
							 <%= i.describe_my_ownership %> 
							 
							 <%= link_to  i.name, :controller=>"items", :action =>"show", :id => i.id %>
							 <br><br>  
		
							 <% for m in messages %>
							   	<%= render 'messages/shared/show_message', :object => m %>
					     	<% end %>	
		                <br>    
					<% end %>
					
			<% end %>
			
		<% end %> 

</div>



