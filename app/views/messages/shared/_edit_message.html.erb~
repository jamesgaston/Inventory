<%= form_for(@message) do |f| %>

<%= render 'shared/error_messages', :object => f.object %>

<%= f.label :message_text %><br />
<%= f.text_field :message_text %><br />
<br />



<%= f.submit "Send Message" %><br /><br />
<%= submit_tag "Cancel", { :name => "message[Cancel]" } %>
 
  


<% end %>
<br />