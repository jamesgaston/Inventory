<%= form_for(@item) do |f| %>

<%= render 'items/shared/item_error_messages' %>

<%= f.label :name %><br />
<%= f.text_field :name %><br />

<%= f.label :description %><br />
<%= f.text_field :description %><br />

<%= f.label :tags %><br />
<%= f.text_field :tags %><br />

<%= f.label :number %><br />
<%= f.text_field :number %><br />


<%= f.label :location %><br />
<%= f.text_field :location %><br />

<%= f.label :ownership %><br />
<%= f.collection_select :ownership_id, @ownerships, :id, :name, :prompt => "Select Ownership Status" %>
<br />
<%= f.label :category %><br />
<%= f.collection_select :category_id, @categories, :id, :name, :prompt => "Select Category" %>
<br />


<br />

<%= f.submit "Save Item" %><br /><br />
<%= submit_tag "Cancel", { :name => "item[Cancel]" } %>
  
  
<%= f.hidden_field :user_id %>
<% end %>
<br />