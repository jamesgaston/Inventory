					<td><%= link_to i.name, {:controller=>"items", :action=>"show", :id=>i.id},{:title => "Edit Item"} %></td>
				   <td><%= i.ownership_id ? Ownership.find( i.ownership_id).name : "" %> </td>
					<td><%= i.description.truncate(30, :omission =>"...") %></td>
					<td align="right"><%= button_to "Delete", {:action => "destroy", :id =>i.id}, 
					        :confirm => "Are you sure?", :method => :delete %></td>
			
				</tr>
				<% end %>
		</table>
